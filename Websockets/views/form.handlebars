<div class="container">
  <h2 class="text-center mt-5 mb-3">Ingresar productos</h2>
  <form onsubmit="return addProduct(this)" class="mx-auto" style="width: 80%">
    <div class="mb-3">
      <label for="title">Producto</label>
      <input type="text" class="form-control" id="title" name="title" placeholder="Ingresar el nombre del producto" required/>
    </div>
    <div class="mb-3">
      <label for="price">Precio</label>
      <input type="number" class="form-control" id="price" name="price" placeholder="Ingresar el precio del producto" required/>
    </div>
    <div class="mb-3">
      <label for="thumb">Imagen</label>
      <input type="text" class="form-control" id="thumb" name="thumb" placeholder="Ingresar la URL del producto" required/>
    </div>
    <button type="submit" class="btn btn-warning mb-3" style="width: 175px">Cargar producto</button>
  </form>

  <hr>
  <h2 class="text-center mt-5 mb-3">Lista de productos</h2>
  <div id="no-products-text" class="text-secondary text-center">No hay productos</div>
  <div id="sockets-table" style="display:none">
    <table class="table table-dark table-striped mx-auto" style="width: 900px; max-width:80%">
      <thead>
        <tr>
          <th scope="col">Producto</th>
          <th scope="col">Precio</th>
          <th scope="col">Imagen</th>
        </tr>
      </thead>
      <tbody id="table"></tbody>
    </table>
  </div>
</div>

  
  <div class="container" style="margin-top: 30px">
    <hr>
    <h2 class="text-center mt-5 mb-3">Centro de mensajes</h2>
    <form onsubmit="return addMessage(this)" class="mx-auto" style="width: 80%">
      <div class="row">
        <div class="col mb-3">
          <label for="mail">Mail</label>
          <input type="text" class="form-control" id="mail" name="mail" placeholder="Ingresar mail" required/>
          <label for="message" class="mt-3">Mensaje</label>
          <input type="text" class="form-control" id="message" name="message" placeholder="Escribe un mensaje" required/>
        </div>
      </div>
      <button type="submit" class="btn btn-primary" style="width: 125px">Enviar</button>
    </form>

  </div>
  <div class="container">
    <div id="messages" class="mx-auto rounded bg-light p-3 mb-5" style="width: 80%"></div>
  </div>