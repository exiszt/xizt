<section class="p-4">
    <h2 class="text-center mt-5">Vista de Productos</h2>
    {{#if productos}}

    <table class="table table-dark table-striped mx-auto mt-5" style="width: 900px; max-width: 90%">
        <thead>
            <tr>
                <th class="text-center">Nombre</th>
                <th class="text-center">Precio</th>
                <th class="text-center">Foto</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr class="text-center">
                <td scope="col" class="text-center">{{this.name}}</td>
                <td scope="col" class="text-center">{{this.price}}</td>
                <td scope="col">
                    <img src="{{this.picture}}" alt="{{this.name}}" width="30px">
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h2>No hay productos</h2>
    {{/if}}
    <div class="mt-3">
        <a href="./productos"
            class="btn btn-warning d-block mx-auto mt-5" style="width: 200px">
            Agregar productos
        </a>
    </div>
</section>