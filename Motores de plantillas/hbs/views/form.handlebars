<div class="container">
    <h1 class="text-center mt-5">Ingresar productos</h1>
        <form action='/productos' method='POST' class="mx-auto">
            <div class="mt-4 mb-4">
                <label for='name'>Nombre</label>
                <input class="form-control" type='text' name='name' placeholder="Ingrese el nombre del producto"
                    required />
            </div>
            <div class="mt-4 mb-4">
                <label for='price'>Precio</label>
                <input class="form-control" type='number' name='price' placeholder="Ingrese el precio del producto"
                    required />
            </div>
            <div class="mt-4 mb-4">
                <label for='picture'>Imagen</label>
                <input class="form-control" type='url' name='picture' placeholder="Ingrese la URL del producto"
                    required />
            </div>
            <div class="mt-4 mb-4">
                <input class="btn btn-primary" type='submit' value='Enviar' />
            </div>
        </form>
        <div>
            <a href="./listaproductos">
                <button class="btn btn-warning">Ver lista</button>
            </a>
        </div>
</div>