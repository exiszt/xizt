include ./layout.pug

section.p-4
    h2.mt-5 Ingresar producto
    form(action='/productos' method='POST')
        div.mb-3.mt-4
            label.form-label(for='name') Nombre
            input.form-control(type='text' name='name' placeholder="Ingrese el nombre del producto" required)
        div.mb-3.mt-4
            label.form-label(for='name') Precio
            input.form-control(type='number' name='price' placeholder="Ingrese el precio del producto" required)
        div.mb-3.mt-4
            label.form-label(for='name') Imagen
            input.form-control(type='url' name='picture' placeholder="Ingrese la URL del producto" required)
        div.mb-3.mt-4
            input.btn.btn-primary(type='submit' value='Enviar')
    div
        a(href="./listaproductos")
            button.btn.btn-warning Ver lista