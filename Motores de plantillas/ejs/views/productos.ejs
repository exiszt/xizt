<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EJS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body class="bg-dark text-white">
    <section class="bg-dark text-white">
        <h2 class="text-center mt-5">Vista de Productos</h2>
        <% if (productos.length===0) { %>
            <h4 class="text-center mt-5">No hay productos</h4>
            <% } else { %>
                <table class="table table-dark table-striped mx-auto" style="width: 900px; max-width: 90%">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">Nombre</th>
                            <th scope="col" class="text-center">Precio</th>
                            <th scope="col">Foto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% productos.forEach(producto=> { %>
                            <tr class="text-center">
                                <td class="text-center">
                                    <%= producto.name %>
                                </td>
                                <td class="text-center">
                                    <%= producto.price %>
                                </td>
                                <td class="text-center">
                                    <img src="<%= producto.picture %>" style="width: 25px" alt="<%= producto.name %>">
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>
                    <div class="mt-3">
                        <a href="./productos"
                            class="btn btn-warning d-block mx-auto mt-5" style="width: 200px">
                            Agregar productos
                        </a>
                    </div>
    </section>
</body>
</html>